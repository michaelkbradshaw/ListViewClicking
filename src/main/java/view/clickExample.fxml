<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.ClickExampleController">
   <top>
      <Label text="Select your item" BorderPane.alignment="CENTER">
         <font>
            <Font size="47.0" />
         </font>
      </Label>
   </top>
   <left>
      <ListView fx:id="listview" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </left>
   <center>
      <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <top>
            <Label fx:id="itemName" text="Item Name" BorderPane.alignment="CENTER">
               <font>
                  <Font size="32.0" />
               </font>
            </Label>
         </top>
         <center>
            <TextArea id="desc" fx:id="itemDescription" editable="false" maxWidth="400.0" prefHeight="200.0" prefWidth="200.0" text="Item description" wrapText="true" BorderPane.alignment="CENTER">
               <font>
                  <Font size="18.0" />
               </font>
            </TextArea>
         </center>
      </BorderPane>
   </center>
</BorderPane>
